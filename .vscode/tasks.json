{
  "version": "2.0.0",
  // ═══════════════════════════════════════════════════════════════════════════
  // GLOBAL DEFAULTS - Aplican a todas las tasks a menos que se sobreescriban
  // ═══════════════════════════════════════════════════════════════════════════
  "options": {
    "cwd": "${workspaceFolder}"
  },
  "presentation": {
    "reveal": "silent",
    "panel": "dedicated",
    "showReuseMessage": false,
    "clear": true
  },
  // ═══════════════════════════════════════════════════════════════════════════
  // INPUTS - Variables reutilizables para tasks interactivas
  // ═══════════════════════════════════════════════════════════════════════════
  "inputs": [
    {
      "id": "serverPort",
      "type": "pickString",
      "description": "Puerto del servidor",
      "options": [
        "3050",
        "3006",
        "4000",
        "5001",
        "8000"
      ],
      "default": "3050"
    },
    {
      "id": "stackGroup",
      "type": "pickString",
      "description": "Grupo de stack a iniciar",
      "options": [
        "apb",
        "demo",
        "oae",
        "nre",
        "ble"
      ],
      "default": "apb"
    },
    {
      "id": "oaeProject",
      "type": "pickString",
      "description": "Proyecto a visualizar (OpenAPI/AsyncAPI)",
      "options": [
        "AAIAServer",
        "DevOpsServer",
        "MCPChannels",
        "PrologEditor",
        "TypedPromptsEditor"
      ],
      "default": "PrologEditor"
    }
  ],
  "tasks": [
    // ═══════════════════════════════════════════════════════════════════════
    // SCP: SCRIPTORIUM (Compound tasks)
    // ═══════════════════════════════════════════════════════════════════════
    {
      "label": "SCP: Start Full Stack",
      "dependsOn": [
        "MCP: Start [Launcher]",
        "APB: Start [Service]",
        "APB: Start [App]",
        "NOV: Start [Server]",
        "JKL: Start [Site]",
        "MCP: Start [Model]",
        "ZEU: Start [UI]",
        "NOV: Start [UI]"
      ],
      "dependsOrder": "sequence",
      "problemMatcher": [],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "detail": "⚠️ Compound tasks pueden fallar. Usar tasks individuales si hay problemas."
    },
    // ═══════════════════════════════════════════════════════════════════════
    // MCP: MCP SERVERS (Mesh + Core)
    // Puertos: 3050 (Launcher), 3006 (Prolog), 4001 (Model), 3020 (TypedPrompt)
    // ═══════════════════════════════════════════════════════════════════════
    {
      "label": "MCP: Start [Launcher]",
      "type": "shell",
      "command": "npm",
      "args": [
        "run",
        "start:launcher"
      ],
      "options": {
        "cwd": "${workspaceFolder}/MCPGallery/mcp-mesh-sdk"
      },
      "windows": {
        "options": {
          "cwd": "${workspaceFolder}/MCPGallery/mcp-mesh-sdk",
          "env": {
            "PATH": "${env:PATH};C:\\Program Files\\swipl\\bin"
          }
        }
      },
      "osx": {
        "options": {
          "cwd": "${workspaceFolder}/MCPGallery/mcp-mesh-sdk",
          "env": {
            "PATH": "${env:PATH}:/opt/homebrew/bin:/usr/local/bin"
          }
        }
      },
      "isBackground": true,
      "problemMatcher": {
        "owner": "mcp-launcher",
        "pattern": {
          "regexp": "^\\[(ERROR|error)\\]\\s+(.*)$",
          "severity": 1,
          "message": 2
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "^.*Starting.*$",
          "endsPattern": "^.*Launcher running on port 3050.*$"
        }
      },
      "presentation": {
        "reveal": "always",
        "group": "mcp-stack"
      },
      "detail": "Puerto 3050"
    },
    {
      "label": "MCP: Start [Model]",
      "type": "shell",
      "command": "npm",
      "args": [
        "start"
      ],
      "options": {
        "cwd": "${workspaceFolder}/MCPGallery/mcp-model-sdk"
      },
      "isBackground": true,
      "problemMatcher": {
        "owner": "mcp-model",
        "pattern": {
          "regexp": "^.*listening on port 4001.*$",
          "message": 1
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "^.*Starting.*$",
          "endsPattern": "^.*listening on port 4001.*$"
        }
      },
      "presentation": {
        "reveal": "always",
        "group": "mcp-stack"
      },
      "detail": "Puerto 4001"
    },
    {
      "label": "MCP: Start [DevOps]",
      "type": "shell",
      "command": "npm",
      "args": [
        "run",
        "start"
      ],
      "options": {
        "cwd": "${workspaceFolder}/MCPGallery/mcp-mesh-sdk"
      },
      "isBackground": true,
      "problemMatcher": {
        "owner": "mcp-devops",
        "pattern": {
          "regexp": "^(Error|TypeError|SyntaxError):\\s+(.*)$",
          "severity": 1,
          "message": 2
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "^.*Starting.*$",
          "endsPattern": "^.*DevOps MCP Server running on port 3003.*$"
        }
      },
      "presentation": {
        "reveal": "always",
        "group": "mcp-stack"
      },
      "detail": "Puerto 3003 - DevOps Server con persistencia"
    },
    {
      "label": "MCP: Start [AAIA]",
      "type": "shell",
      "command": "npm",
      "args": [
        "run",
        "start:aaia"
      ],
      "options": {
        "cwd": "${workspaceFolder}/MCPGallery/mcp-mesh-sdk"
      },
      "isBackground": true,
      "problemMatcher": {
        "owner": "mcp-aaia",
        "pattern": {
          "regexp": "^(Error|TypeError|SyntaxError):\\s+(.*)$",
          "severity": 1,
          "message": 2
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "^.*Starting.*$",
          "endsPattern": "^.*AAIA MCP Server running on port 3007.*$"
        }
      },
      "presentation": {
        "reveal": "always",
        "group": "mcp-stack"
      },
      "detail": "Puerto 3007 - AAIA Server (FIAs + Mundos)"
    },
    {
      "label": "AIA: Open [Browser]",
      "type": "shell",
      "command": "cmd",
      "args": [
        "/c",
        "start",
        "http://localhost:3007"
      ],
      "problemMatcher": [],
      "presentation": {
        "reveal": "never"
      },
      "detail": "Abrir AAIA Server"
    },
    {
      "label": "AIA: Start [Backend]",
      "type": "shell",
      "command": "npm",
      "args": [
        "run",
        "start:dev"
      ],
      "options": {
        "cwd": "${workspaceFolder}/AAIAGallery/backend"
      },
      "isBackground": true,
      "problemMatcher": {
        "owner": "aaia-backend",
        "pattern": {
          "regexp": "^(Error|TypeError|SyntaxError):\\s+(.*)$",
          "severity": 1,
          "message": 2
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "^.*Starting.*$",
          "endsPattern": "^.*AAIA Backend running.*$"
        }
      },
      "presentation": {
        "reveal": "always",
        "group": "aaia-stack"
      },
      "detail": "Puerto 8007 - AAIA Backend Gateway (Express)"
    },
    {
      "label": "AIA: Start [Frontend]",
      "type": "shell",
      "command": "npm",
      "args": [
        "start"
      ],
      "options": {
        "cwd": "${workspaceFolder}/AAIAGallery/frontend"
      },
      "isBackground": true,
      "problemMatcher": {
        "owner": "aaia-frontend",
        "pattern": {
          "regexp": "^(Error|TypeError|SyntaxError):\\s+(.*)$",
          "severity": 1,
          "message": 2
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "^.*Compiling.*$",
          "endsPattern": "^.*Compiled successfully.*$"
        }
      },
      "presentation": {
        "reveal": "always",
        "group": "aaia-stack"
      },
      "detail": "Puerto 4200 - AAIA Frontend (Angular)"
    },
    {
      "label": "AIA: Open [Frontend]",
      "type": "shell",
      "command": "cmd",
      "args": [
        "/c",
        "start",
        "http://localhost:4200"
      ],
      "problemMatcher": [],
      "presentation": {
        "reveal": "never"
      },
      "detail": "Abrir AAIA Frontend"
    },
    // ═══════════════════════════════════════════════════════════════════════
    // APB: AGENT PROLOG BRAIN (PrologEditor Stack)
    // Puertos: 8000 (Backend), 5001 (Frontend/Angular)
    // ═══════════════════════════════════════════════════════════════════════
    {

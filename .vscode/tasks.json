        }
      },
      "presentation": {
        "group": "apb-stack"
      },
      "detail": "Puerto 5001"
    },
    {
      "label": "APB: Build [Chain]",
      "type": "shell",
      "command": "bash",
      "args": [
        "-c",
        "npm run build --prefix MCPGallery/mcp-core-sdk && npm run build --prefix MCPGallery/mcp-mesh-sdk && npm run build --prefix PrologEditor/frontend"
      ],
      "problemMatcher": [
        "$tsc"
      ],
      "group": "build",
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      },
      "detail": "Build: Core → Mesh → Frontend"
    },
    {
      "label": "APB: Health Check",
      "type": "shell",
      "command": "bash",
      "args": [
        "./scripts/apb-health-check.sh"
      ],
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "shared",
        "clear": true
      },
      "detail": "Verificar prerequisitos"
    },
    {
      "label": "APB: Open [Browser]",
      "type": "shell",
      "command": "cmd",
      "args": [
        "/c",
        "start",
        "http://localhost:5001"
      ],
      "windows": {
        "command": "cmd",
        "args": [
          "/c",
          "start",
          "http://localhost:5001"
        ]
      },
      "problemMatcher": [],
      "presentation": {
        "reveal": "never"
      },
      "detail": "Abrir http://localhost:5001"
    },
    // ═══════════════════════════════════════════════════════════════════════
    // NOV: NOVELIST EDITOR

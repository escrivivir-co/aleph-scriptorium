{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://escrivivir.co/schemas/agent-creator-catalog.schema.json",
  "title": "Agent Creator Template Catalog Schema",
  "description": "Schema for validating the catalog.json index of AgentLoreSDK templates",
  "type": "object",
  "required": ["$schema", "source", "scanned_at", "summary", "categories"],
  "properties": {
    "$schema": {
      "type": "string",
      "description": "Reference to this schema file"
    },
    "source": {
      "type": "string",
      "description": "Path to the source catalog (relative to workspace root)",
      "pattern": "^AgentLoreSDK/"
    },
    "scanned_at": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 timestamp of when the catalog was scanned"
    },
    "summary": {
      "type": "object",
      "description": "Aggregate counts for quick reference",
      "required": ["total_categories", "total_items"],
      "properties": {
        "total_categories": {
          "type": "integer",
          "minimum": 0
        },
        "total_items": {
          "type": "integer",
          "minimum": 0
        },
        "by_type": {
          "type": "object",
          "additionalProperties": {
            "type": "object",
            "properties": {
              "categories": { "type": "integer" },
              "items": { "type": "integer" }
            }
          }
        }
      }
    },
    "categories": {
      "type": "object",
      "description": "Template categories organized by type",
      "properties": {
        "agents": {
          "$ref": "#/definitions/categoryType"
        },
        "commands": {
          "$ref": "#/definitions/categoryType"
        },
        "skills": {
          "$ref": "#/definitions/categoryType"
        },
        "templates": {
          "$ref": "#/definitions/categoryType"
        }
      },
      "additionalProperties": {
        "$ref": "#/definitions/categoryType"
      }
    }
  },
  "definitions": {
    "categoryType": {
      "type": "object",
      "description": "A category type (agents, commands, skills, templates)",
      "required": ["description", "count", "items"],
      "properties": {
        "description": {
          "type": "string"
        },
        "count": {
          "type": "integer",
          "minimum": 0
        },
        "items": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/categoryItem"
          }
        }
      }
    },
    "categoryItem": {
      "type": "object",
      "description": "An individual category within a type",
      "required": ["id", "name", "path", "items"],
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier (kebab-case)",
          "pattern": "^[a-z0-9-]+$"
        },
        "name": {
          "type": "string",
          "description": "Human-readable name"
        },
        "path": {
          "type": "string",
          "description": "Relative path from source"
        },
        "description": {
          "type": "string",
          "description": "Optional description of the category"
        },
        "items": {
          "type": "integer",
          "minimum": 0,
          "description": "Number of templates in this category"
        },
        "tags": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Searchable tags for filtering"
        }
      }
    }
  }
}

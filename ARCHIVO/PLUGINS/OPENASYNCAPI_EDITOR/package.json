{
  "name": "@scriptorium/openasyncapi-editor-tools",
  "version": "1.0.0",
  "description": "CLI tools para visualizar y generar c√≥digo desde specs OpenAPI/AsyncAPI",
  "private": true,
  "scripts": {
    "swagger-ui": "npx @redocly/cli preview-docs specs/PrologEditor/openapi.yaml --port 8080",
    "asyncapi-studio": "npx @asyncapi/cli start studio --file specs/PrologEditor/asyncapi.yaml --port 8081",
    "validate:openapi": "npx @redocly/cli lint specs/PrologEditor/openapi.yaml",
    "validate:asyncapi": "npx @asyncapi/cli validate specs/PrologEditor/asyncapi.yaml",
    "generate:ts-client": "npx @openapitools/openapi-generator-cli generate -i specs/PrologEditor/openapi.yaml -g typescript-fetch -o generated/PrologEditor/typescript-client",
    "generate:asyncapi-ts": "npx @asyncapi/cli generate fromTemplate specs/PrologEditor/asyncapi.yaml @asyncapi/typescript-nats-template -o generated/PrologEditor/asyncapi-client"
  },
  "devDependencies": {
    "@asyncapi/cli": "^2.0.0",
    "@redocly/cli": "^1.0.0",
    "@openapitools/openapi-generator-cli": "^2.7.0"
  }
}

{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://escrivivir.co/schemas/agent-definition.json",
  "title": "AgentDefinition",
  "description": "Esquema para validar definiciones de agentes del Scriptorium",
  "type": "object",
  "required": ["name", "description", "tools", "handoffs"],
  "properties": {
    "name": {
      "type": "string",
      "description": "Nombre único del agente",
      "pattern": "^[A-Z][a-zA-Z0-9_]*$"
    },
    "description": {
      "type": "string",
      "description": "Descripción breve del agente"
    },
    "argument-hint": {
      "type": "string",
      "description": "Hint de uso para el usuario"
    },
    "tools": {
      "type": "array",
      "description": "Herramientas disponibles",
      "items": {
        "type": "string",
        "enum": ["vscode", "execute", "read", "edit", "search", "web", "playwright/*", "agent", "todo"]
      }
    },
    "handoffs": {
      "type": "array",
      "description": "Delegaciones a otros agentes",
      "items": {
        "$ref": "#/definitions/handoff"
      }
    }
  },
  "definitions": {
    "handoff": {
      "type": "object",
      "required": ["label", "agent", "prompt"],
      "properties": {
        "label": {
          "type": "string",
          "description": "Etiqueta descriptiva"
        },
        "agent": {
          "type": "string",
          "description": "Agente destino"
        },
        "prompt": {
          "type": "string",
          "description": "Prompt inicial"
        },
        "send": {
          "type": "boolean",
          "description": "Si enviar automáticamente",
          "default": false
        }
      }
    }
  }
}

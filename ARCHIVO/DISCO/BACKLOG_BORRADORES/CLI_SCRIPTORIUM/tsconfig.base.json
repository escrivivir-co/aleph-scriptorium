{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "lib": ["ES2022"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    "noImplicitReturns": true,
    "noPropertyAccessFromIndexSignature": true,
    "isolatedModules": true,
    "verbatimModuleSyntax": true,
    "paths": {
      "@scriptorium/types": ["./packages/types/index.ts"],
      "@scriptorium/core": ["./packages/core/index.ts"],
      "@scriptorium/cli": ["./apps/cli/src/index.ts"],
      "@scriptorium/menu-renderer": ["./packages/menu-renderer/index.ts"],
      "@scriptorium/md-parser": ["./packages/md-parser/index.ts"],
      "@scriptorium/agent-runtime": ["./packages/agent-runtime/index.ts"],
      "@scriptorium/plugin-loader": ["./packages/plugin-loader/index.ts"]
    }
  },
  "exclude": ["node_modules", "dist", "build"]
}
